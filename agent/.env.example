# Database
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql+asyncpg://agent:changeme@postgres:5432/agent

# Redis
REDIS_URL=redis://redis:6379

# MinIO
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=changeme
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=agent-files
# For local dev use http://localhost:9000/agent-files
# For production use your domain: https://yourdomain.com/files
MINIO_PUBLIC_URL=http://localhost:9000/agent-files

# LLM API Keys (leave empty to disable a provider)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# LLM Defaults
DEFAULT_MODEL=claude-sonnet-4-20250514
SUMMARIZATION_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Platform Tokens
DISCORD_TOKEN=
TELEGRAM_TOKEN=
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=

# Agent Config
MAX_AGENT_ITERATIONS=10
CONVERSATION_TIMEOUT_MINUTES=30
WORKING_MEMORY_MESSAGES=20
DEFAULT_GUEST_TOKEN_BUDGET=5000
# Comma-separated list of modules available to guest users
DEFAULT_GUEST_MODULES=research,file_manager,code_executor,knowledge

RENPHO_EMAIL=""
RENPHO_PASSWORD=""

GARMIN_EMAIL=""
GARMIN_PASSWORD=""

# Claude Code module
# Host paths to credentials mounted into worker containers (read-only)
CLAUDE_AUTH_PATH=
SSH_KEY_PATH=
GH_CONFIG_PATH=
GIT_CONFIG_PATH=
CLAUDE_CODE_TIMEOUT=1800
CLAUDE_CODE_IMAGE=my-claude-code-image
# Absolute host path to task workspace dir (bind-mounted into worker containers)
# Must be absolute so `docker run -v` works from inside the module container.
# Example: /home/youruser/my_agent/agent/data/claude_tasks
CLAUDE_TASK_VOLUME=
# Git identity for bot commits (overrides any mounted .gitconfig)
CLAUDE_CODE_GIT_AUTHOR_NAME=claude-agent[bot]
CLAUDE_CODE_GIT_AUTHOR_EMAIL=claude-agent[bot]@noreply.github.com

# Web Portal — OAuth Providers
# Discord OAuth2 (register at https://discord.com/developers/applications)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
# Google OAuth2 (register at https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Redirect URI base — provider name is appended (e.g. /auth/callback/discord)
PORTAL_OAUTH_REDIRECT_URI=http://localhost:8080/auth/callback
# JWT secret for portal sessions (generate: openssl rand -hex 32)
PORTAL_JWT_SECRET=
# Fernet key for encrypting user credentials at rest
# Generate: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
CREDENTIAL_ENCRYPTION_KEY=

# Deployer module
DEPLOY_PORT_START=4000
DEPLOY_PORT_END=4100
DEPLOY_BASE_DOMAIN=projects.localhost